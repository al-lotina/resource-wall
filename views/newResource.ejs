    <!-- font -->
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue:300,300i,700,700i&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>

    <div class="sidenav">
      <img class="brain" src="/images/brain.png">
      <form id="SearchResources" method="GET">
        <textarea id="search" placeholder="Search Resources"></textarea>
        <div>
        </div>
      </form>
      <form method="POST">
      <div class="sign-in">
        <label for="username"><b>Username</b></label>
        <input type="text" placeholder="Enter Username" name="username" required>
        <label for="psw"><b>Password</b></label>
        <input type="password" placeholder="Enter Password" name="psw" required>
        <button type="submit">Login</button>
      </div>
      </form>
      <a href="/register">Register</a>
      <div class="categories">
        <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Categories
          <span class="caret"></span></button>
        <ul class="dropdown-menu">
          <a href="#web-development">Web Development</a>
          <a href="#business">Business</a>
          <a href="#photography">Photography</a>
           <a href="#design">Design</a>
          <a href="#science">Science</a>
        </ul>
        </div>
      </div>
    </div>
    </div>


    <main class="feature" style="margin: 1em;">
      <h2>Add New Resource</h2>
      <form class="form-inline" action="/newresource" method="POST">

        <h5>
        <div class="form-group mb-2">
          <label for="email">Title:</label>
          <input class="form-control" type="text" name="title" placeholder="Add title" style="width: 300px; margin: 1em">
        </div>
        </h5>
        <h5>
          <div class="form-group mb-2">
            <label for="email">Description:</label>
            <input class="form-control" type="text" name="description" placeholder="Add description" style="width: 300px; margin: 1em">
          </div>
        </h5>
        <h5>
          <div class="form-group mb-2">
            <label for="email">Category:</label>
            <input class="form-control" type="text" name="category" placeholder="" style="width: 300px; margin: 1em">
          </div>
        </h5>
        <h5>
        <div class="form-group mb-2">
          <label for="password">Link:</label>
          <input class="form-control" type="text" name="url" placeholder="http://" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        </h5>
      </form>

    </main>

  </body>
</html>
