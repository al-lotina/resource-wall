<!DOCTYPE html>
<html lang="en">

  <body>
    <%- include('partials/index') %>
    <div>
      <h1>Profile</h1>
      <form class="form-inline" action="/update/name" method="POST">
      <h3>
        <% for(let info in information) { %>
          <label>Name:</label> <%= information[info].name %>
          <input type="text" name="updateName" placeholder="Enter new name" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Update</button>
          <br>
          <label>Email:</label> <%= information[info].email %>
          <% } %>
      </h3>
      </form>
    </div>
  </body>
