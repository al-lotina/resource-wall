<!DOCTYPE html>
<html lang="en">
<body>
  <%- include('partials/index') %>

    <main class="feature" style="margin: 1em;">
      <h2>Create Account</h2>
      <form class="form-inline" action="/register" method="POST">
        <h5>
          <div class="form-group mb-2">
            <label for="username">Username:</label>
            <input class="form-control" type="text" name="username" placeholder="Enter username" style="width: 300px; margin: 1em">
          </div>
          </h5>
        <h5>
        <div class="form-group mb-2">
          <label for="email">Email address:</label>
          <input class="form-control" type="email" name="email" placeholder="Enter email" style="width: 300px; margin: 1em">
        </div>
        </h5>
        <h5>
        <div class="form-group mb-2">
          <label for="password">Password:</label>
          <input class="form-control" type="password" name="password" placeholder="Password" style="width: 300px; margin: 1em">
          <button type="submit" class="btn btn-primary">Register</button>
        </div>
        </h5>
      </form>

    </main>

  </body>
</html>
